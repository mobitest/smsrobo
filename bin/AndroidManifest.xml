<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zjhcsoft.smsrobot1"
    android:versionCode="11"
    android:versionName="1.1.1" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
	<uses-permission android:name="android.permission.WAKE_LOCK"/>

		
    <application
        android:name="com.zjhcsoft.sms.SmsRobotApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <receiver android:name="com.commonsware.cwac.wakeful.AlarmReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
			</intent-filter>

			<meta-data android:name="com.commonsware.cwac.wakeful" android:resource="@xml/wakeful" />
		</receiver>
		<receiver
            android:name="com.zjhcsoft.sms.AutoStart"
            android:enabled="true"
            android:exported="true" >
            <intent-filter android:priority="500" >
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.zjhcsoft.sms.SmsDownloadService2"
            android:stopWithTask="true" >
        </service>
                <service
            android:name="com.zjhcsoft.sms.SmsDownloadService"
            android:stopWithTask="true" >
        </service>
        <service
            android:name="com.zjhcsoft.sms.SmsTraceService"
            android:stopWithTask="true" >
        </service>
        <service
            android:name="com.zjhcsoft.sms.SmsLaunchService"
            android:stopWithTask="true" >
        </service>

        <activity
            android:name="com.zjhcsoft.sms.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.zjhcsoft.sms.activity.MyPreferenceActivity" >
        </activity>
        <activity
        android:name="com.zjhcsoft.sms.activity.FailListActivity"
            android:label="@string/title_activity_fail_list"
            android:parentActivityName="com.zjhcsoft.sms.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zjhcsoft.sms.MainActivity" />
        </activity>
        <activity
            android:name="com.zjhcsoft.sms.activity.ListSendActivity"
            android:label="@string/title_activity_list_send"
            android:parentActivityName="com.zjhcsoft.sms.activity.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.zjhcsoft.sms.MainActivity" />
        </activity>
        <activity
            android:name="com.zjhcsoft.sms.activity.TestcaseActivity"
            android:label="@string/title_activity_testcase" >
        </activity>
    </application>

</manifest>
